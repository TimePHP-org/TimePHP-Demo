{% extends "template/layout.twig" %}
{% block body %}

	<div class="container my-5">

		{% if getParams("error") is not null %}
			<div class="alert alert-danger">
				Wrong credentials
			</div>
		{% endif %}

		<form class="mt-3 shadow p-4 rounded" method="POST" action="{{ generate('newArticleForm') }}">
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" name="title" class="form-control" maxLength="255" id="title" placeholder="Enter the title">
			</div>
			<div class="form-group">
				<label for="content">Content</label>
				<textarea type="text" name="content" class="form-control" id="content" placeholder="Enter the content" style="min-height: 150px;"></textarea>
			</div>
			{{ provideCsrf() }}
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>

{% endblock %}
